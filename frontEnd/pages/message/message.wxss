    .sort{ 
    padding-left: 60rpx; 
    overflow: hidden; 
    width: 640rpx; 
    padding-right: 50rpx; 
    position: absolute; 
    left: 0; 
    top: 70rpx; 
    z-index: 999; 
    background-color: rgba(255, 255, 255, 0.849); 
    } 
    .up{ 
    animation-name:slidown; 
    animation-duration:0.3s;
    animation-timing-function:linear;
    } 
    .down{ 
    animation-name:slidup;
    animation-duration:0.3s;
    animation-timing-function:linear;
    } 

    .sort view{ 
    height: 80rpx; 
    line-height: 80rpx; 
    font-size:28rpx; 
    font-family:PingFangSC-Regular; 
    font-weight:400; 
    color:rgba(51,51,51,1); 
    } 
    .dropdown_active{ 
    color:rgba(20,130,240,1); 
    } 
    .sort image{ 
    width:30rpx; 
    height:21rpx; 
    float: right; 
    margin-top: 30rpx; 
    } 
  
    @keyframes slidown{ 
    from{ 
    transform: translateY(-100%); 
    } 
    to{ 
    transform: translateY(0%); 
    } 
    }
    
    @keyframes slidup{ 
    from{ 
    transform: translateY(0%); 
    } 
    to{ 
    transform: translateY(-100%); 
    } 
    } 
    .show{ 
    display: block; 
    } 
