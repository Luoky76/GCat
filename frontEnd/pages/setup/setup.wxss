.select_box{
    background: #fff;
    width: 150%;
    margin: 30rpx auto;
    position: relative;
   }
   .select{
    box-sizing: border-box;
    width: 100%;
    height: 70rpx;
    border:1px solid #efefef;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
   }
   .select_text{
    font-size: 30rpx;
    flex: 1;
   }
   .select_img_rotate{
    transform:rotate(180deg); 
   }
   .option_box{
    position: absolute;
    top: 70rpx;
    width: 100%;
    border:1px solid #efefef;
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
   }
   .option{
    display: block;
    line-height: 40rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #efefef;
    padding: 10rpx;
   }
