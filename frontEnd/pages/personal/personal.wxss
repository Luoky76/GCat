/* 页面背景 */
.bg{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-size:cover;
  z-index:-1; 
}
/* 用户背景框图设置 */
.user{
  width:98%;
  height:260rpx;
  margin-top: 15rpx;
  margin-left: 1%;
  margin-right: 1%;
  border-radius: 50rpx;
  background-color:rgba(255,255,255,0.81);
  display: flex;
  box-shadow:1rpx 4rpx 12rpx rgba(0,0,0,0.4);
}
