 <view class='option_box' style='height:{{show?(List0.length>5?300:List0.length*60):0}}rpx;'>
  <text class='option' style='{{index1==List.length-1&&"border:0;"}}' wx:for='{{List0}}' wx:key='this' data-index='{{index1}}' catchtap='optionTap'>{{item}}</text>
 </view>
</view>

</view>
