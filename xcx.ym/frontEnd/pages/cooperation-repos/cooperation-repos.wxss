/* pages/cooperation-repos/cooperation-repos.wxss */
/* 页面背景 */
.bg{
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-size:cover;
    z-index:-1; 
  }
  .title_font{
    text-align: center;
    color: #F16522;
    font-weight:bold;
  }
  .icon{
    margin-top: 2.5%;
    margin-left:46%;
    width: 60rpx;
    height: 60rpx;
  }
  .detail_icon{
    width: 40rpx;
    height: 40rpx;
  }
  .swiper-tab{  
    width: 100%;  
    text-align: center;  
    line-height: 80rpx;
  }  
  .swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 25%;  
    color: #777777;  
  }
  .on{ 
    color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;
  }
  .main_detail{
    width:98%;
    height:260rpx;
    margin-top: 10%;
    margin-left: 1%;
    margin-right: 1%;
    border-radius: 50rpx;
    background-color:rgba(247,246,216,0.56);
    display: flex;
    flex-direction: row;
    box-shadow:1rpx 4rpx 12rpx rgba(217,120,28,0.4);
  }
  .img{
    height:200rpx;
    width:200rpx;
    margin-top: 14%;
    margin-left: 14%;
    border-radius: 50%;
    background-color: white;
  }
  .right_column{
    display: flex;
    flex-direction: column;
    margin-left: 6%;
    margin-top: 5%;
  }
  .font{
    position:absolute;
    font-size: 30rpx;
    margin-left: 1%;
    color: #CE6C25;
  }
  .comment{
    margin-top: 3%;
    background-color: rgba(247,180,184,0.66);
    color: white;
    box-shadow:1rpx 4rpx 2rpx rgba(234,210,122,0.4);
    font-size: 35rpx;
  }
  .readme{
    margin-top: 1.5%;
    background-color: rgba(247,180,184,0.66);
    color: white;
    box-shadow:1rpx 4rpx 2rpx rgba(234,210,122,0.4);
    font-size: 35rpx;
  }
  .readme_detail{
    width:98%;
    height:1000rpx;
    margin-top: 2%;
    margin-left: 1%;
    margin-right: 1%;
    border-radius: 5rpx;
    background-color:rgba(255,255,255,0.81);
    display: flex;
    box-shadow:1rpx 4rpx 12rpx rgba(0,0,0,0.4);
  }
  .code1{
    margin-top: 10%;
    background-color:rgba(255,255,255,0.6);
    color: #463b34af;
    border-radius: 25rpx;
    box-shadow:1rpx 4rpx 10rpx rgba(0,0,0,0.4);
    font-size: 30rpx;
  }
  .code2{
    margin-top: 2%;
    background-color:rgba(255,255,255,0.6);
    color: #463b34af;
    border-radius: 25rpx;
    box-shadow:1rpx 4rpx 10rpx rgba(0,0,0,0.4);
    font-size: 30rpx;
  }
  .merge_detail{
    width:98%;
    height:160rpx;
    margin-top: 10%;
    margin-left: 1%;
    margin-right: 1%;
    border-radius: 30rpx;
    background-color:rgba(255,255,255,0.6);
    display: flex;
    flex-direction: row;
    box-shadow:1rpx 4rpx 12rpx rgba(0,0,0,0.4);
  }
  .merge_icon{
    margin-top: 5%;
    margin-left:4%;
    width: 90rpx;
    height: 90rpx;
  }
  .merge_font{
    font-size: 30rpx;
    color: #CE6C25;
  }
  .co_detail{
    width:98%;
    height:150rpx;
    margin-top: 10%;
    margin-left: 1%;
    margin-right: 1%;
    border-bottom-right-radius: 10%;
    border-top-left-radius: 10%;
    background-color:rgba(255,255,255,0.6);
    display: flex;
    flex-direction: row;
    box-shadow:1rpx 4rpx 12rpx rgba(0,0,0,0.4);
  }
  .co_img{
    height:120rpx;
    width:120rpx;
    margin-top: 14%;
    margin-left: 25%;
    border-radius: 50%;
    background-color: white;
  }